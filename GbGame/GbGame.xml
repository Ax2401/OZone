	<cpu:CompareAToB/>

	<cpu:BranchToRelativeAddressIfNotZero/>
	<addressOf ref="clearMap" type="Relative8"/>

	<cpu:CompareAToC/>

	<cpu:BranchToRelativeAddressIfNotZero/>
	<addressOf ref="clearMap" type="Relative8"/>

