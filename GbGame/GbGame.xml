	<cpu:DisableInterrupts/>

	<cpu:CopyImmediateToSP/>
	<hex>fffe</hex>

	<!--Turn Off LCD-->
	<label id="waitForVBlank"/>

	<cpu:CopyImmediateAddressToA/>
	<hex>ff44</hex>

	<cpu:CompareAToImmediate/>
	<hex>91</hex>

	<cpu:BranchToRelativeAddressIfNotZero/>
